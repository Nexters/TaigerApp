<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nexters.taigerapp.ui.destination.DestinationActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <ViewSwitcher
        android:id="@+id/ll_destination_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:src="@drawable/kakao_default_profile_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

    </ViewSwitcher>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_dest_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_arrow" />

        <TextView
            android:id="@+id/tv_dest_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="장소를 입력해주세요"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>
